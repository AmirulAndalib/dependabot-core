#!/bin/bash

set -e

IMAGE_NAME="${IMAGE_NAME:=dependabot/dependabot-core-development}"
CONTAINER_NAME="${CONTAINER_NAME:=dependabot-core-development}"
DOCKERFILE="Dockerfile.development"
HELP=false
REBUILD=false

# Enable docker buildkit with inline cache builds
export DOCKER_BUILDKIT=1

# shellcheck disable=SC2034
OPTS=$(getopt -o hr --long help,rebuild -n 'parse-options' -- "$@")
# shellcheck disable=SC2181
if [ $? != 0 ]; then
  echo "failed parsing options" >&2
  exit 1
fi

while true; do
  case "$1" in
    -h | --help ) HELP=true; shift ;;
    -r | --rebuild ) REBUILD=true; shift ;;
    -- ) shift; break ;;
    * ) break ;;
  esac
done

if [ "$HELP" = "true" ]; then
  echo "usage: $0 [--rebuild] [ARGS]"
  exit 0
fi

build_image() {
  export BUILT_IMAGE=true
  echo "$(tput setaf 2)=> building image from Dockerfile$(tput sgr0)"

  local TARGETARCH;
  case "$(uname -m)"
  in
    amd64 | x86_64) TARGETARCH=amd64 ;;
    arm64 | aarch64) TARGETARCH=arm64 ;;
    *) TARGETARCH=amd64 ;;
  esac

  docker build \
    --build-arg BUILDKIT_INLINE_CACHE=1 \
    --build-arg "TARGETARCH=${TARGETARCH}" \
    --build-arg "USER_UID=$(id -u)" \
    --build-arg "USER_GID=$(id -g)" \
    --cache-from "dependabot/dependabot-core:latest" \
    -t dependabot/dependabot-core .
  echo "$(tput setaf 2)=> building image from $DOCKERFILE$(tput sgr0)"
  docker build --build-arg BUILDKIT_INLINE_CACHE=1 -t "$IMAGE_NAME" -f "$DOCKERFILE" .
}

IMAGE_ID=$(docker inspect --type=image -f '{{.Id}}' "$IMAGE_NAME" 2> /dev/null || true)
if [ -z "$IMAGE_ID" ]; then
  echo "$(tput setaf 4) > image $IMAGE_NAME doesn't exist$(tput sgr0)"
  build_image
elif [ "$REBUILD" = "true" ]; then
  echo "$(tput setaf 4) > rebuild of $IMAGE_NAME requested$(tput sgr0)"
  build_image
else
  echo "$(tput setaf 4) > image $IMAGE_NAME already exists$(tput sgr0)"
fi

set +e
RUNNING=$(docker ps --format '{{.Names}}' | grep "$CONTAINER_NAME$")
set -e
echo "$RUNNING"
if [ -n "$RUNNING" ]; then
  if [ -z "$BUILT_IMAGE" ]; then
    # image was not rebuilt - can we reuse existing?
    exec docker exec -ti "$CONTAINER_NAME" bash
  else
    # image was rebuilt - exit running container
    docker stop "$CONTAINER_NAME"
  fi
fi

DOCKER_OPTS=()
if [ -n "$DEPENDABOT_PROXY" ]; then
  DOCKER_OPTS+=(-e "http_proxy=$DEPENDABOT_PROXY")
  DOCKER_OPTS+=(-e "HTTP_PROXY=$DEPENDABOT_PROXY")
  DOCKER_OPTS+=(-e "https_proxy=$DEPENDABOT_PROXY")
  DOCKER_OPTS+=(-e "HTTPS_PROXY=$DEPENDABOT_PROXY")
fi

if [ -n "$DOCKER_NETWORK" ]; then
  DOCKER_OPTS+=(--network "$DOCKER_NETWORK")
fi

CONTAINER_ARGS=("bash")
if [ "$#" -gt "0" ]; then
  CONTAINER_ARGS=("$@")
fi

echo "$(tput setaf 2)=> running docker development shell$(tput sgr0)"
CODE_DIR="/home/dependabot/dependabot-core"
touch .core-bash_history
docker run --rm -ti \
  -v "$(pwd)/.core-bash_history:/home/dependabot/.bash_history:delegated" \
  -v "$(pwd)/.rubocop.yml:$CODE_DIR/.rubocop.yml:delegated" \
  -v "$(pwd)/bin:$CODE_DIR/bin:delegated" \
  -v "$(pwd)/dry-run:$CODE_DIR/dry-run:delegated" \
  -v "$(pwd)/common/.rubocop.yml:$CODE_DIR/common/.rubocop.yml:delegated" \
  -v "$(pwd)/common/Gemfile:$CODE_DIR/common/Gemfile:delegated" \
  -v "$(pwd)/common/dependabot-common.gemspec:$CODE_DIR/common/dependabot-common.gemspec:delegated" \
  -v "$(pwd)/common/bin:$CODE_DIR/common/bin:delegated" \
  -v "$(pwd)/common/lib:$CODE_DIR/common/lib:delegated" \
  -v "$(pwd)/common/spec:$CODE_DIR/common/spec:delegated" \
  -v "$(pwd)/common/script:$CODE_DIR/common/script:delegated" \
  -v "$(pwd)/terraform/.rubocop.yml:$CODE_DIR/terraform/.rubocop.yml:delegated" \
  -v "$(pwd)/terraform/Gemfile:$CODE_DIR/terraform/Gemfile:delegated" \
  -v "$(pwd)/terraform/dependabot-terraform.gemspec:$CODE_DIR/terraform/dependabot-terraform.gemspec:delegated" \
  -v "$(pwd)/terraform/helpers:$CODE_DIR/terraform/helpers:delegated" \
  -v "$(pwd)/terraform/lib:$CODE_DIR/terraform/lib:delegated" \
  -v "$(pwd)/terraform/spec:$CODE_DIR/terraform/spec:delegated" \
  -v "$(pwd)/terraform/script:$CODE_DIR/terraform/script:delegated" \
  -v "$(pwd)/elm/.rubocop.yml:$CODE_DIR/elm/.rubocop.yml:delegated" \
  -v "$(pwd)/elm/Gemfile:$CODE_DIR/elm/Gemfile:delegated" \
  -v "$(pwd)/elm/dependabot-elm.gemspec:$CODE_DIR/elm/dependabot-elm.gemspec:delegated" \
  -v "$(pwd)/elm/lib:$CODE_DIR/elm/lib:delegated" \
  -v "$(pwd)/elm/spec:$CODE_DIR/elm/spec:delegated" \
  -v "$(pwd)/elm/script:$CODE_DIR/elm/script:delegated" \
  -v "$(pwd)/docker/.rubocop.yml:$CODE_DIR/docker/.rubocop.yml:delegated" \
  -v "$(pwd)/docker/Gemfile:$CODE_DIR/docker/Gemfile:delegated" \
  -v "$(pwd)/docker/dependabot-docker.gemspec:$CODE_DIR/docker/dependabot-docker.gemspec:delegated" \
  -v "$(pwd)/docker/lib:$CODE_DIR/docker/lib:delegated" \
  -v "$(pwd)/docker/spec:$CODE_DIR/docker/spec:delegated" \
  -v "$(pwd)/docker/script:$CODE_DIR/docker/script:delegated" \
  -v "$(pwd)/git_submodules/.rubocop.yml:$CODE_DIR/git_submodules/.rubocop.yml:delegated" \
  -v "$(pwd)/git_submodules/Gemfile:$CODE_DIR/git_submodules/Gemfile:delegated" \
  -v "$(pwd)/git_submodules/dependabot-git_submodules.gemspec:$CODE_DIR/git_submodules/dependabot-git_submodules.gemspec:delegated" \
  -v "$(pwd)/git_submodules/lib:$CODE_DIR/git_submodules/lib:delegated" \
  -v "$(pwd)/git_submodules/spec:$CODE_DIR/git_submodules/spec:delegated" \
  -v "$(pwd)/git_submodules/script:$CODE_DIR/git_submodules/script:delegated" \
  -v "$(pwd)/github_actions/.rubocop.yml:$CODE_DIR/github_actions/.rubocop.yml:delegated" \
  -v "$(pwd)/github_actions/Gemfile:$CODE_DIR/github_actions/Gemfile:delegated" \
  -v "$(pwd)/github_actions/dependabot-github_actions.gemspec:$CODE_DIR/github_actions/dependabot-github_actions.gemspec:delegated" \
  -v "$(pwd)/github_actions/lib:$CODE_DIR/github_actions/lib:delegated" \
  -v "$(pwd)/github_actions/spec:$CODE_DIR/github_actions/spec:delegated" \
  -v "$(pwd)/github_actions/script:$CODE_DIR/github_actions/script:delegated" \
  -v "$(pwd)/python/.rubocop.yml:$CODE_DIR/python/.rubocop.yml:delegated" \
  -v "$(pwd)/python/Gemfile:$CODE_DIR/python/Gemfile:delegated" \
  -v "$(pwd)/python/dependabot-python.gemspec:$CODE_DIR/python/dependabot-python.gemspec:delegated" \
  -v "$(pwd)/python/helpers:$CODE_DIR/python/helpers:delegated" \
  -v "$(pwd)/python/lib:$CODE_DIR/python/lib:delegated" \
  -v "$(pwd)/python/spec:$CODE_DIR/python/spec:delegated" \
  -v "$(pwd)/python/script:$CODE_DIR/python/script:delegated" \
  -v "$(pwd)/pub/.rubocop.yml:$CODE_DIR/pub/.rubocop.yml:delegated" \
  -v "$(pwd)/pub/Gemfile:$CODE_DIR/pub/Gemfile:delegated" \
  -v "$(pwd)/pub/dependabot-pub.gemspec:$CODE_DIR/pub/dependabot-pub.gemspec:delegated" \
  -v "$(pwd)/pub/lib:$CODE_DIR/pub/lib:delegated" \
  -v "$(pwd)/pub/spec:$CODE_DIR/pub/spec:delegated" \
  -v "$(pwd)/pub/script:$CODE_DIR/pub/script:delegated" \
  -v "$(pwd)/nuget/.rubocop.yml:$CODE_DIR/nuget/.rubocop.yml:delegated" \
  -v "$(pwd)/nuget/Gemfile:$CODE_DIR/nuget/Gemfile:delegated" \
  -v "$(pwd)/nuget/dependabot-nuget.gemspec:$CODE_DIR/nuget/dependabot-nuget.gemspec:delegated" \
  -v "$(pwd)/nuget/lib:$CODE_DIR/nuget/lib:delegated" \
  -v "$(pwd)/nuget/spec:$CODE_DIR/nuget/spec:delegated" \
  -v "$(pwd)/nuget/script:$CODE_DIR/nuget/script:delegated" \
  -v "$(pwd)/maven/.rubocop.yml:$CODE_DIR/maven/.rubocop.yml:delegated" \
  -v "$(pwd)/maven/Gemfile:$CODE_DIR/maven/Gemfile:delegated" \
  -v "$(pwd)/maven/dependabot-maven.gemspec:$CODE_DIR/maven/dependabot-maven.gemspec:delegated" \
  -v "$(pwd)/maven/lib:$CODE_DIR/maven/lib:delegated" \
  -v "$(pwd)/maven/spec:$CODE_DIR/maven/spec:delegated" \
  -v "$(pwd)/maven/script:$CODE_DIR/maven/script:delegated" \
  -v "$(pwd)/gradle/.rubocop.yml:$CODE_DIR/gradle/.rubocop.yml:delegated" \
  -v "$(pwd)/gradle/Gemfile:$CODE_DIR/gradle/Gemfile:delegated" \
  -v "$(pwd)/gradle/dependabot-gradle.gemspec:$CODE_DIR/gradle/dependabot-gradle.gemspec:delegated" \
  -v "$(pwd)/gradle/lib:$CODE_DIR/gradle/lib:delegated" \
  -v "$(pwd)/gradle/spec:$CODE_DIR/gradle/spec:delegated" \
  -v "$(pwd)/gradle/script:$CODE_DIR/gradle/script:delegated" \
  -v "$(pwd)/hex/.rubocop.yml:$CODE_DIR/hex/.rubocop.yml:delegated" \
  -v "$(pwd)/hex/Gemfile:$CODE_DIR/hex/Gemfile:delegated" \
  -v "$(pwd)/hex/dependabot-hex.gemspec:$CODE_DIR/hex/dependabot-hex.gemspec:delegated" \
  -v "$(pwd)/hex/helpers:$CODE_DIR/hex/helpers:delegated" \
  -v "$(pwd)/hex/lib:$CODE_DIR/hex/lib:delegated" \
  -v "$(pwd)/hex/spec:$CODE_DIR/hex/spec:delegated" \
  -v "$(pwd)/hex/script:$CODE_DIR/hex/script:delegated" \
  -v "$(pwd)/cargo/.rubocop.yml:$CODE_DIR/cargo/.rubocop.yml:delegated" \
  -v "$(pwd)/cargo/Gemfile:$CODE_DIR/cargo/Gemfile:delegated" \
  -v "$(pwd)/cargo/dependabot-cargo.gemspec:$CODE_DIR/cargo/dependabot-cargo.gemspec:delegated" \
  -v "$(pwd)/cargo/lib:$CODE_DIR/cargo/lib:delegated" \
  -v "$(pwd)/cargo/spec:$CODE_DIR/cargo/spec:delegated" \
  -v "$(pwd)/cargo/script:$CODE_DIR/cargo/script:delegated" \
  -v "$(pwd)/go_modules/.rubocop.yml:$CODE_DIR/go_modules/.rubocop.yml:delegated" \
  -v "$(pwd)/go_modules/Gemfile:$CODE_DIR/go_modules/Gemfile:delegated" \
  -v "$(pwd)/go_modules/dependabot-go_modules.gemspec:$CODE_DIR/go_modules/dependabot-go_modules.gemspec:delegated" \
  -v "$(pwd)/go_modules/helpers:$CODE_DIR/go_modules/helpers:delegated" \
  -v "$(pwd)/go_modules/lib:$CODE_DIR/go_modules/lib:delegated" \
  -v "$(pwd)/go_modules/spec:$CODE_DIR/go_modules/spec:delegated" \
  -v "$(pwd)/go_modules/script:$CODE_DIR/go_modules/script:delegated" \
  -v "$(pwd)/npm_and_yarn/.rubocop.yml:$CODE_DIR/npm_and_yarn/.rubocop.yml:delegated" \
  -v "$(pwd)/npm_and_yarn/Gemfile:$CODE_DIR/npm_and_yarn/Gemfile:delegated" \
  -v "$(pwd)/npm_and_yarn/dependabot-npm_and_yarn.gemspec:$CODE_DIR/npm_and_yarn/dependabot-npm_and_yarn.gemspec:delegated" \
  -v "$(pwd)/npm_and_yarn/helpers:$CODE_DIR/npm_and_yarn/helpers:delegated" \
  -v "$(pwd)/npm_and_yarn/lib:$CODE_DIR/npm_and_yarn/lib:delegated" \
  -v "$(pwd)/npm_and_yarn/spec:$CODE_DIR/npm_and_yarn/spec:delegated" \
  -v "$(pwd)/npm_and_yarn/script:$CODE_DIR/npm_and_yarn/script:delegated" \
  -v "$(pwd)/composer/.rubocop.yml:$CODE_DIR/composer/.rubocop.yml:delegated" \
  -v "$(pwd)/composer/Gemfile:$CODE_DIR/composer/Gemfile:delegated" \
  -v "$(pwd)/composer/dependabot-composer.gemspec:$CODE_DIR/composer/dependabot-composer.gemspec:delegated" \
  -v "$(pwd)/composer/helpers:$CODE_DIR/composer/helpers:delegated" \
  -v "$(pwd)/composer/lib:$CODE_DIR/composer/lib:delegated" \
  -v "$(pwd)/composer/spec:$CODE_DIR/composer/spec:delegated" \
  -v "$(pwd)/composer/script:$CODE_DIR/composer/script:delegated" \
  -v "$(pwd)/bundler/.rubocop.yml:$CODE_DIR/bundler/.rubocop.yml:delegated" \
  -v "$(pwd)/bundler/Gemfile:$CODE_DIR/bundler/Gemfile:delegated" \
  -v "$(pwd)/bundler/dependabot-bundler.gemspec:$CODE_DIR/bundler/dependabot-bundler.gemspec:delegated" \
  -v "$(pwd)/bundler/lib:$CODE_DIR/bundler/lib:delegated" \
  -v "$(pwd)/bundler/helpers:$CODE_DIR/bundler/helpers:delegated" \
  -v "$(pwd)/bundler/spec:$CODE_DIR/bundler/spec:delegated" \
  -v "$(pwd)/bundler/script:$CODE_DIR/bundler/script:delegated" \
  -v "$(pwd)/omnibus/.rubocop.yml:$CODE_DIR/omnibus/.rubocop.yml:delegated" \
  -v "$(pwd)/omnibus/Gemfile:$CODE_DIR/omnibus/Gemfile:delegated" \
  -v "$(pwd)/omnibus/dependabot-omnibus.gemspec:$CODE_DIR/omnibus/dependabot-omnibus.gemspec:delegated" \
  -v "$(pwd)/omnibus/lib:$CODE_DIR/omnibus/lib:delegated" \
  -v "$(pwd)/omnibus/spec:$CODE_DIR/omnibus/spec:delegated" \
  -v "$(pwd)/omnibus/script:$CODE_DIR/omnibus/script:delegated" \
  -v "$(pwd)/tmp:/$CODE_DIR/tmp:delegated" \
  --name "$CONTAINER_NAME" \
  --env "LOCAL_GITHUB_ACCESS_TOKEN=$LOCAL_GITHUB_ACCESS_TOKEN" \
  "${DOCKER_OPTS[@]}" \
  --cap-add=SYS_PTRACE \
  "$IMAGE_NAME" "${CONTAINER_ARGS[@]}"
